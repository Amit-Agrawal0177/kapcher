{
  "openapi": "3.0.0",
  "info": {
    "title": "Workstation Tracking API",
    "description": "API for managing users, workstations, and packaging tracking",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:27189",
      "description": "Local development server"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": ["name", "password", "role"],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "example": "password123"
          },
          "role": {
            "type": "string",
            "enum": ["admin", "guest"],
            "example": "admin"
          },
          "is_active": {
            "type": "string",
            "enum": ["y", "n"],
            "default": "y"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["name", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "password": {
            "type": "string",
            "example": "password123"
          }
        }
      },
      "Workstation": {
        "type": "object",
        "required": ["workstation_name", "system_mac_id", "camera_url"],
        "properties": {
          "workstation_name": {
            "type": "string",
            "example": "Station A1"
          },
          "system_mac_id": {
            "type": "string",
            "example": "00:1B:44:11:3A:B7"
          },
          "camera_url": {
            "type": "string",
            "example": "http://192.168.1.100/stream"
          },
          "camera_quality": {
            "type": "string",
            "example": "HD"
          },
          "pre_video_time": {
            "type": "integer",
            "example": 30
          },
          "process_video_time": {
            "type": "integer",
            "example": 60
          },
          "fps": {
            "type": "integer",
            "example": 30
          },
          "is_active": {
            "type": "string",
            "enum": ["y", "n"],
            "default": "y"
          }
        }
      },
      "Packaging": {
        "type": "object",
        "required": ["bar_code_1"],
        "properties": {
          "bar_code_1": {
            "type": "string",
            "example": "BC123456"
          },
          "start_time": {
            "type": "string",
            "format": "date-time",
            "example": "2026-02-16T10:30:00"
          },
          "bar_code_2": {
            "type": "string",
            "example": "BC789012"
          },
          "end_time": {
            "type": "string",
            "format": "date-time",
            "example": "2026-02-16T11:00:00"
          },
          "video_path": {
            "type": "string",
            "example": "/videos/recording_123.mp4"
          },
          "is_active": {
            "type": "string",
            "enum": ["y", "n"],
            "default": "y"
          }
        }
      }
    }
  },
  "paths": {
    "/api/health": {
      "get": {
        "summary": "Health check",
        "tags": ["System"],
        "responses": {
          "200": {
            "description": "API is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user/create": {
      "post": {
        "summary": "Create a new user",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user_id": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "summary": "Login user and get JWT token",
        "tags": ["User"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer"
                        },
                        "name": {
                          "type": "string"
                        },
                        "role": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/api/workstation/create": {
      "post": {
        "summary": "Create a new workstation",
        "tags": ["Workstation"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Workstation"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Workstation created successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/workstation/list": {
      "get": {
        "summary": "Get paginated list of workstations with filters",
        "tags": ["Workstation"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number"
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Items per page"
          },
          {
            "name": "is_active",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["y", "n"]
            },
            "description": "Filter by active status"
          },
          {
            "name": "workstation_name",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by workstation name (partial match)"
          }
        ],
        "responses": {
          "200": {
            "description": "List of workstations",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Workstation"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "integer"
                        },
                        "per_page": {
                          "type": "integer"
                        },
                        "total": {
                          "type": "integer"
                        },
                        "pages": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/packaging/create": {
      "post": {
        "summary": "Create a new packaging record",
        "tags": ["Packaging"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Packaging"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Packaging record created successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/packaging/update/{packaging_id}": {
      "put": {
        "summary": "Update an existing packaging record",
        "tags": ["Packaging"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "packaging_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Packaging record ID"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Packaging"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Packaging record updated successfully"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Packaging record not found"
          }
        }
      }
    },
    "/api/packaging/list": {
      "get": {
        "summary": "Get paginated list of packaging records with filters",
        "tags": ["Packaging"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "Page number"
          },
          {
            "name": "per_page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "Items per page"
          },
          {
            "name": "is_active",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["y", "n"]
            },
            "description": "Filter by active status"
          },
          {
            "name": "bar_code_1",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by bar code 1 (partial match)"
          },
          {
            "name": "bar_code_2",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by bar code 2 (partial match)"
          },
          {
            "name": "start_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter by start date (from)"
          },
          {
            "name": "end_date",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "Filter by end date (to)"
          }
        ],
        "responses": {
          "200": {
            "description": "List of packaging records",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Packaging"
                      }
                    },
                    "pagination": {
                      "type": "object",
                      "properties": {
                        "page": {
                          "type": "integer"
                        },
                        "per_page": {
                          "type": "integer"
                        },
                        "total": {
                          "type": "integer"
                        },
                        "pages": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  }
}